<!DOCTYPE html>
<html lang="en">

<head>
  <%- include('partials/header') %>
    <title>Nuevo Zocalo</title>
</head>

<body>

  <%- include('partials/navigation') %>
    <div class="container p-4">

      <div class="row">

        <div class="col-md-4 mx-auto">

          <form method="POST" action="/new-entry" class="card bg-dark text-light card-body">

            <div class="mb-3">
              <label for="titulo">Titulo</label>
              <input name="titulo" type="text" class="form-control rounded-0" placeholder="Ingrese un titulo" maxlength = "40"  autofocus required>
            </div>

            <div class="mb-3">
              <label for="subtitulo">Sub-Titulo</label>
              <input name="subtitulo" type="text" class="form-control rounded-0" placeholder="Ingrese un Sub-Titulo"  maxlength = "55" autofocus required>
            </div>

            <div class="mb-3">
              <input type="submit"  value="Agregar" class="btn btn-outline-primary btn-sm">
            </div>
          </form>
        </div>
      </div>

    </div>

    <%- include('partials/footer')%>
</body>

</html>